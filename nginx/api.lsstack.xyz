http {
    server {
        listen  80;
        server_name api.lsstack.xyz;

        location / {
            proxy_pass http://api.lsstack.xyz:3333;
        }
        
        location /hls {
            types {
                application/vnd.apple.mpegurl m3u8;
                video/mp2t ts;
            }
            
            root /var/www;
            add_header Cache-Control no-cache;
        }
    }
}